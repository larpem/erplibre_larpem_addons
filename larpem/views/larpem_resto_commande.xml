<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="larpem_resto_commande_view_form" model="ir.ui.view">
        <field name="name">larpem_resto_commande_form</field>
        <field name="model">larpem.resto.commande</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                    <group>
                        <field name="id" />
                    </group>
                    <group>
                        <field name="zone_repas" />
                    </group>
                    <group>
                        <field name="type" />
                    </group>
<!--                    <group>-->
<!--                        <field name="category_paiement" />-->
<!--                    </group>-->
                    <group>
                        <field name="paye" />
                    </group>
                    <group>
                        <field name="commande_recu" />
                    </group>
                    <group>
                        <field name="description_paiement" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="larpem_resto_commande_view_graph" model="ir.ui.view">
        <field name="name">larpem_resto_commande_graph</field>
        <field name="model">larpem.resto.commande</field>
        <field name="arch" type="xml">
            <graph string="Larpem banque">
                <field name="name" type="row" />
                <field name="id" type="row" />
            </graph>
        </field>
    </record>

    <record id="larpem_resto_commande_view_kanban" model="ir.ui.view">
        <field name="name">larpem_resto_commande_kanban</field>
        <field name="model">larpem.resto.commande</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <field name="id" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="id" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="larpem_resto_commande_view_pivot" model="ir.ui.view">
        <field name="name">larpem_resto_commande_pivot</field>
        <field name="model">larpem.resto.commande</field>
        <field name="arch" type="xml">
            <pivot string="Larpem banque">
                <field name="name" type="row" />
                <field name="id" type="row" />
            </pivot>
        </field>
    </record>

    <record id="larpem_resto_commande_view_search" model="ir.ui.view">
        <field name="name">larpem_resto_commande_search</field>
        <field name="model">larpem.resto.commande</field>
        <field name="arch" type="xml">
            <search string="Larpem banque">
                <filter domain="[('name','!=',False)]" name="name" string="Avec nom" />
                <filter domain="[('|'), ('name','=',False), ('name','=','')]" name="sans nom" string="Sans nom" />
                <filter domain="[('paye','=',False)]" name="non_paye" string="Non payÃ©" />
            </search>
        </field>
    </record>

    <record id="larpem_resto_commande_view_tree" model="ir.ui.view">
        <field name="name">larpem_resto_commande_tree</field>
        <field name="model">larpem.resto.commande</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="id" />
            </tree>
        </field>
    </record>

    <act_window
        id="larpem_resto_commande_action_window"
        name="Commande du restaurant"
        res_model="larpem.resto.commande"
        view_mode="kanban,tree,pivot,graph,form"
    />
</odoo>
