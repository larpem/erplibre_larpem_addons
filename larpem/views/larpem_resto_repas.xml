<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="larpem_resto_repas_view_form" model="ir.ui.view">
        <field name="name">larpem_resto_repas_form</field>
        <field name="model">larpem.resto.repas</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object"
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                   options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="price"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="larpem_resto_repas_view_graph" model="ir.ui.view">
        <field name="name">larpem_resto_repas_graph</field>
        <field name="model">larpem.resto.repas</field>
        <field name="arch" type="xml">
            <graph string="Larpem banque">
                <field name="name" type="row"/>
                <field name="id" type="row"/>
            </graph>
        </field>
    </record>

    <record id="larpem_resto_repas_view_kanban" model="ir.ui.view">
        <field name="name">larpem_resto_repas_kanban</field>
        <field name="model">larpem.resto.repas</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name"/>
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="price"/>
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="id"/>
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="larpem_resto_repas_view_pivot" model="ir.ui.view">
        <field name="name">larpem_resto_repas_pivot</field>
        <field name="model">larpem.resto.repas</field>
        <field name="arch" type="xml">
            <pivot string="Larpem banque">
                <field name="name" type="row"/>
                <field name="id" type="row"/>
            </pivot>
        </field>
    </record>

    <record id="larpem_resto_repas_view_search" model="ir.ui.view">
        <field name="name">larpem_resto_repas_search</field>
        <field name="model">larpem.resto.repas</field>
        <field name="arch" type="xml">
            <search string="Larpem banque">
                <filter domain="[('name','!=',False)]" name="name" string="Avec nom"/>
                <filter domain="[('|'), ('name','=',False), ('name','=','')]" name="sans nom" string="Sans nom"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
            </search>
        </field>
    </record>

    <record id="larpem_resto_repas_view_tree" model="ir.ui.view">
        <field name="name">larpem_resto_repas_tree</field>
        <field name="model">larpem.resto.repas</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="price"/>
                <field name="id"/>
            </tree>
        </field>
    </record>

    <act_window
            id="larpem_resto_repas_action_window"
            name="repas du restaurant"
            res_model="larpem.resto.repas"
            view_mode="kanban,tree,pivot,graph,form"
    />
</odoo>
